{
  "name": "agentic-bridge",
  "version": "1.0.0",
  "description": "Agentic Bridge â€” Desktop app for Unified Bridge (Copilot + Codex)",
  "main": "dist/main/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.main.json --watch\" \"electron .\"",
    "dev:renderer": "vite",
    "build:bridge": "cd ../unified-bridge && npx esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/bridge.mjs --external:node-pty --external:@github/copilot-sdk --external:vscode-jsonrpc --external:zod",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build": "npm run build:bridge && npm run build:main && npm run build:renderer",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.agentic.bridge",
    "productName": "Agentic Bridge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "../unified-bridge/dist/bridge.mjs",
        "to": "bridge/bridge.mjs"
      },
      {
        "from": "../unified-bridge/node_modules/node-pty",
        "to": "bridge/node_modules/node-pty",
        "filter": ["**/*.node", "**/*.js", "**/*.json", "**/LICENSE*"]
      },
      {
        "from": "../unified-bridge/node_modules/@github",
        "to": "bridge/node_modules/@github"
      },
      {
        "from": "../unified-bridge/node_modules/vscode-jsonrpc",
        "to": "bridge/node_modules/vscode-jsonrpc"
      },
      {
        "from": "../unified-bridge/node_modules/zod",
        "to": "bridge/node_modules/zod"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png",
      "category": "Development"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    }
  }
}
